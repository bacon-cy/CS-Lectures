<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:clickable="true"
        app:tint="@color/white"
        app:backgroundTint="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_ic_menu" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:paddingBottom="90dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/main_procrastinate_button"
                android:layout_width="300dp"
                android:layout_height="175dp"
                android:scaleType="centerCrop"
                android:background="@drawable/main_button"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/main_procrastinate"
                android:contentDescription="" />
            <ImageButton
                android:id="@+id/main_mindfulness_button"
                android:layout_width="300dp"
                android:layout_height="175dp"
                android:scaleType="centerCrop"
                android:background="@drawable/main_button"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:src="@drawable/main_mindfulness" />
            <ImageButton
                android:id="@+id/main_mood_button"
                android:layout_width="300dp"
                android:layout_height="175dp"
                android:scaleType="centerCrop"
                android:background="@drawable/main_button"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:src="@drawable/main_mood" />
            <ImageButton
                android:id="@+id/main_course_button"
                android:layout_width="300dp"
                android:layout_height="175dp"
                android:scaleType="centerCrop"
                android:background="@drawable/main_button"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:src="@drawable/main_course" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>