<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/score_tv"
        android:layout_width="wrap_content"
        android:layout_height="145dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="@string/ips_score"
        android:textAlignment="center"
        android:textColor="@color/aquamarine_500"
        android:textSize="108sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />

    <TextView
        android:id="@+id/flash_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai"
        android:text="@string/_45"
        android:textAlignment="viewStart"
        android:textColor="@color/aquamarine_500"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@id/score_tv"
        app:layout_constraintStart_toEndOf="@+id/score_tv" />

    <TextView
        android:id="@+id/explanation_title"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:singleLine="false"
        android:text=""
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Explanation Title Here" />

    <TextView
        android:id="@+id/explanation"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:singleLine="false"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explanation_title"
        tools:text="Explanation Here" />

    <Button
        android:id="@+id/result_check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="@string/ips_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>